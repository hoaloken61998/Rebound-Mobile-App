<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền (nếu muốn trong suốt thì để transparent) -->
    <solid android:color="@android:color/transparent" />

    <!-- Độ dày và màu viền -->
    <stroke
        android:width="0.5dp"
        android:color="@color/accent_light" /> <!-- (#AB9E67 theo bạn) -->

    <!-- Bo góc nhẹ nếu muốn -->
    <corners android:radius="4dp" />
</shape>
